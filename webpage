  <script>
    // Simple hash-router to simulate ‚Äúsubpages‚Äù within one file
    const routes = ["home", "cv", "research", "posts", "contact"];
    const pages = [...document.querySelectorAll(".page")];
    const navLinks = [...document.querySelectorAll("[data-route]")];

    function setActiveRoute(route){
      const safe = routes.includes(route) ? route : "home";

      pages.forEach(p => p.classList.toggle("active", p.dataset.page === safe));
      navLinks.forEach(a => a.classList.toggle("active", a.dataset.route === safe));

      // a11y: move focus to main heading of the page
      const activePage = document.querySelector(`.page[data-page="${safe}"]`);
      const heading = activePage ? activePage.querySelector("h1") : null;
      if (heading) heading.setAttribute("tabindex", "-1"), heading.focus({preventScroll:true}), heading.removeAttribute("tabindex");
    }

    function onHashChange(){
      const hash = (location.hash || "#home").replace("#","");
      setActiveRoute(hash);
    }

    window.addEventListener("hashchange", onHashChange);
    onHashChange();

    // Footer year
    document.getElementById("year").textContent = new Date().getFullYear();

    // Posts: toggle captions
    const toggleBtn = document.getElementById("toggleCaptionsBtn");
    let captionsOn = true;
    toggleBtn?.addEventListener("click", () => {
      captionsOn = !captionsOn;
      document.querySelectorAll(".caption").forEach(el => {
        el.style.display = captionsOn ? "" : "none";
      });
      toggleBtn.textContent = captionsOn ? "Toggle captions" : "Show captions";
    });

    // Smooth internal navigation (optional enhancement)
    document.querySelectorAll('a[href^="#"]').forEach(a => {
      a.addEventListener("click", (e) => {
        const target = a.getAttribute("href");
        if (!target) return;
        // allow hash routing to work
        // (no extra action needed)
      });
    });
  </script>
